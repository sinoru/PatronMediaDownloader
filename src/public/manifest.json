{
  "manifest_version": 2,
  "default_locale": "en",

  "name": "__MSG_extension_name__",
  "description": "__MSG_extension_description__",
  "version": "0.3",

  "icons": {
    "48": "images/icon.svg",
    "96": "images/icon.svg",
    "128": "images/icon.svg",
    "256": "images/icon.svg",
    "512": "images/icon.svg"
  },

  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false,
    "type": "module"
  },

  "permissions": [
    "downloads",
    "storage",
    "*://*.fanbox.cc/*",
    "*://www.patreon.com/*",
    "*://*.patreonusercontent.com/*"
  ],

  "content_scripts": [{
    "js": [ "content.js" ],
    "matches": [
      "*://*.fanbox.cc/posts/*",
      "*://www.fanbox.cc/*/posts/*",
      "*://www.patreon.com/posts/*"
    ],
    "run_at": "document_idle"
  }],

  "browser_action": {
    "default_icon": "images/toolbar-icon.svg",
    "default_popup": "popup/index.html"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "{E55C3A21-C06F-4D12-8EF1-E16D18FB8245}"
    }
  }
}
