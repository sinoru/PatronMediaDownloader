{
    "manifest_version": 3,
    "default_locale": "en",

    "name": "__MSG_extension_name__",
    "description": "__MSG_extension_description__",
    "version": "1.0",

    "icons": {
        "48": "images/icon.svg",
        "96": "images/icon.svg",
        "128": "images/icon.svg",
        "256": "images/icon.svg",
        "512": "images/icon.svg"
    },

    "background": {
        "scripts": [
            "background.js"
        ],
        "type": "module"
    },

    "host_permissions": [
        "*://*.fanbox.cc/*",
        "*://www.patreon.com/*",
        "*://*.patreonusercontent.com/*"
    ],

    "content_scripts": [{
        "js": [ "content.js" ],
        "matches": [ 
            "*://*.fanbox.cc/posts/*",
            "*://www.fanbox.cc/*/posts/*",
            "*://www.patreon.com/posts/*"
        ],
        "run_at": "document_idle"
    }],

    "action": {
        "default_popup": "popup/index.html",
        "default_icon": "images/toolbar-icon.svg"
    },

    "permissions": [ "downloads", "storage" ]
}
